{
  "name": "monorepo-base",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo base with pnpm + tsup + changesets",
  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "clean": "pnpm -r --filter='./packages/*' run clean",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "react": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
